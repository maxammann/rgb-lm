include(FindPackageHandleStandardArgs)
FIND_PACKAGE_HANDLE_STANDARD_ARGS(ProtobufCRPC DEFAULT_MSG PROTOBUFCRPC_LIBRARY PROTOBUFCRPC_INCLUDE_DIR )

if (PROTOBUFCRPC_FOUND)
	set(PROTOBUFCRPC_LIBRARIES ${PROTOBUFC_LIBRARY})
	set(PROTOBUFCRPC_INCLUDE_DIRS ${PROTOBUFC_INCLUDE_DIR})
endif(PROTOBUFCRPC_FOUND)
