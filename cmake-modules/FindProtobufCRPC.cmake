find_library(PROTOBUFCRPC_LIBRARY
							NAMES "protobuf-c-rpc"
							PATHS "/usr" "/usr/local" "/opt" ENV PROTOBUFC_ROOTDIR
							PATH_SUFFIXES "lib")
mark_as_advanced(PROTOBUFCRPC_LIBRARY)

find_path(PROTOBUFCRPC_INCLUDE_DIR
							NAMES "protobuf-c-rpc/protobuf-c-rpc.h"
							PATHS "/usr" "/usr/local" "/opt" ENV PROTOBUFC_ROOTDIR
							PATH_SUFFIXES "include")
